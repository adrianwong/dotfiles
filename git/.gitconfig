[user]
    name  = Adrian Wong
    email = adrianwjw@gmail.com

[color]
    ui = auto

[alias]
    st   = status
    di   = diff
    dc   = diff --cached
    au   = add --update
    ap   = add --patch
    aa   = add --all
    ci   = commit --verbose
    cam  = commit --amend
    rbi  = rebase --interactive
    rbc  = rebase --continue
    co   = checkout
    mff  = merge --ff-only
    mxff = merge --no-ff
    pff  = pull --ff-only
    prb  = pull --rebase
    fa   = fetch --all
    br   = branch
    dh1  = diff HEAD~1

    # Semantic commit messages.
    # Alias convention: 'c' for 'commit', followed by the first
    # two letters of the commit type.
    scm  = "!. ~/.githelpers && semantic_commit_message"
    cch  = !git scm "chore"
    cdo  = !git scm "docs"
    cfe  = !git scm "feat"
    cfi  = !git scm "fix"
    cre  = !git scm "refactor"
    cst  = !git scm "style"
    cte  = !git scm "test"

    # Fancy logging. Shamelessly ripped from @garybernhardt.
    #   h  = head
    #   hp = head with patch
    #   r  = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l  = all commits, only current branch
    #   la = all commits, all reachable refs
    head = !git r -1
    h    = !git head
    hp   = "!. ~/.githelpers && show_git_head"
    r    = !GIT_NO_PAGER=1 git l -30
    ra   = !git r --all
    l    = "!. ~/.githelpers && pretty_git_log"
    la   = !git l --all

[merge]
    tool = vimdiff
